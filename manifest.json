{
  "name": "Hours Tracker",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "This is a chrome extension that permits to register hours worked for different projects and see some statistics",
  "homepage_url": "https://github.com/NikolasMosca/hours-tracker-chrome-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Hours Tracker",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tts",
    "ttsEngine",
    "storage",
    "unlimitedStorage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}